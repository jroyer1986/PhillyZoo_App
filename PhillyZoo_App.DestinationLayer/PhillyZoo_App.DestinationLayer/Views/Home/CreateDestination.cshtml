@using PhillyZoo_App.DestinationLayer.Models;
@model PhillyZoo_App.DestinationLayer.Models.DestinationModel

@{
    ViewBag.Title = "Create";
}

<h2>Create Destination</h2>

    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)
    
    @if(Model.MapPointTypeID == 0)
    {
        using (Html.BeginForm("CreateType", "Home"))
        {
               @Html.LabelFor(m=>m.MapPointTypeID)
               @Html.DropDownListFor(m => m.MapPointTypeID, (IEnumerable<SelectListItem>)ViewBag.MapPointTypeList)
               <input type="submit" value="select type" />
        }
    }
    else
    {
        using (Html.BeginForm("CreateDestination", "Home", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
    <fieldset>
        <legend>DestinationModel</legend>

        <div class="editor-label">
            @Html.LabelFor(model => model.Name)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Name)
            @Html.ValidationMessageFor(model => model.Name)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.StatusID)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.StatusID)
            @Html.ValidationMessageFor(model => model.StatusID)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.ShortDescription)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.ShortDescription)
            @Html.ValidationMessageFor(model => model.ShortDescription)
        </div>

        <div class="editor-field">
            @Html.HiddenFor(m=>m.MapPointTypeID)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.LongDescription)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.LongDescription)
            @Html.ValidationMessageFor(model => model.LongDescription)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Latitude)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Latitude)
            @Html.ValidationMessageFor(model => model.Latitude)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Longitude)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Longitude)
            @Html.ValidationMessageFor(model => model.Longitude)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.OpeningTime)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.OpeningTime)
            @Html.ValidationMessageFor(model => model.OpeningTime)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.ClosingTime)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.ClosingTime)
            @Html.ValidationMessageFor(model => model.ClosingTime)
        </div>
        <br />
        <div class="editor-label">
            @Html.LabelFor(model => model.PreviewPhoto)
        </div>
        <div class="editor-field">
            <input name="previewPhoto" type="file" id="previewPhoto" value="Upload Picture" />
        </div>
        <br />
        <div class="editor-label">
            @Html.LabelFor(model => model.ThumbnailPhoto)
        </div>
        <div class="editor-field">
            <input name="thumbnailPhoto" type="file" id="thumbnailPhoto" value="Upload Picture" />
        </div>
  
        @{if (Model is IPhotos) { 
            <div id="addPhotos" class="optionalForms">
                @Html.Partial("CreatePhotos", new DestinationPhotosModel() {DestinationLayerID = Model.ID })
            </div>
        }
        if (Model is IMenu){
            <div id="addMenus" class="optionalForms">
                @Html.Partial("CreateMenu", new DestinationMenuModel() { DestinationLayerID = Model.ID })
            </div>
        }
        if (Model is IAdditionalFees){
            <div id="addAdditionalFees" class="optionalForms">
                @Html.Partial("CreateAdditionalFees", new DestinationAdditionalFeesModel() { DestinationLayerID = Model.ID })
            </div>
        }
        if (Model is IEnterExits){
            <div id="addEnterExits" class="optionalForms">
                @Html.Partial("CreateEnterExits", new DestinationEnterExitsModel() { DestinationLayerID = Model.ID })
            </div>
        }
        }
        <p>
            <input type="submit" value="Create" />
        </p>
    </fieldset>
}
}
<div>
    @Html.ActionLink("Back to List", "Index")
</div>

